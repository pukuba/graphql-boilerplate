{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2019",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"allowJs": true,
		"incremental": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"jsx": "preserve",
		"paths": {
			"~/*": ["./src/*"],
			"@graphql/*": ["./src/graphql/*"],
			"@common/*": ["./src/common/*"],
			"@lib/*": ["./src/common/lib/*"],
			"@core/*": ["./src/core/*"]
		}
	},
	"exclude": ["node_modules", "dist", "tmp", ".data", ".next"],
	"include": ["src", "test"]
}
